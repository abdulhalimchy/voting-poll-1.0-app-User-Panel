<%- include('./partials/header/before_login'); %>
<div class="row mt-5 mr-0 ml-0 mb-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body shadow">
            <h2 class="text-center mb-3">
                <i class="fas fa-user-plus"></i> REGISTER
            </h2>
            <%- include('./partials/messages/messages'); %>
            <form action="/user/register" method="POST">
                <div class="form-group">
                    <label for="name"><b>Name</b></label>
                    <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name"
                        value="<%= typeof name != 'undefined' ? name : '' %>" />
                </div>
                <div class="form-group">
                    <label for="email"><b>Email</b></label>
                    <input type="text" id="email" name="email" class="form-control" placeholder="Enter Email"
                        value="<%= typeof email != 'undefined' ? email : '' %>" />
                </div>
                <div class="form-group">
                    <label for="username"><b>Username</b></label>
                    <input type="username" id="username" name="username" class="form-control" placeholder="username"
                        value="<%= typeof username != 'undefined' ? username : '' %>" />
                </div>
                <div class="form-group">
                    <label for="password"><b>Password</b></label>
                    <input type="password" id="password" name="password" class="form-control"
                        placeholder="Create Password" value="<%= typeof password != 'undefined' ? password : '' %>" />
                </div>
                <div class="form-group">
                    <label for="confirmpassword"><b>Confirm Password</b></label>
                    <input type="password" id="confirmpassword" name="confirmpassword" class="form-control"
                        placeholder="Confirm Password"
                        value="<%= typeof confirmpassword != 'undefined' ? confirmpassword : '' %>" />
                </div>
                <button type="submit" class="btn btn-primary btn-block" onclick="startLoading()">
                    Register
                </button>
            </form>
            <p class="lead mt-4">Have An Account? <a href="/user/login">Login</a></p>
        </div>
    </div>
</div>
