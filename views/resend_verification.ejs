<%- include('./partials/header/before_login'); %>
<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body shadow">
            <h1 class="text-center mb-3">Resend verification email</h1>
            <%- include('./partials/messages/messages'); %>
            <form action="/user/resend-verification" method="POST">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" />
                </div>
                <button type="submit" class="btn btn-primary btn-block" onclick="startLoading()">Send</button>
            </form>
        </div>
    </div>
</div>
