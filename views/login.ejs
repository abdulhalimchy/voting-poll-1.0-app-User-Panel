<%- include('./partials/header/before_login'); %>
<div class="row mt-5 mr-0 ml-0">
    <div class="col-md-6 m-auto">
        <div class="card card-body shadow">
            <h2 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> LOGIN</h2>
            <%- include('./partials/messages/messages'); %>
            <form action="/user/login" method="POST">
                <div class="form-group">
                    <label for="email"><b>Email</b></label>
                    <input type="text" id="email" name="email" class="form-control" placeholder="Enter Email" />
                </div>
                <div class="form-group">
                    <label for="password"><b>Password</b></label>
                    <input type="password" id="password" name="password" class="form-control"
                        placeholder="Enter Password" />
                </div>
                <button type="submit" class="btn btn-primary btn-block">Login</button>
            </form>
            <p class="lead mt-4">
                No Account? <a href="/user/register">Register</a>
            </p>
            <a class="text-danger" href="/user/account-recovery">Forgot password?</a>
        </div>
    </div>
</div>
<br><br><br>