<%- include('./partials/header/after_login'); %>
<div class="row mt-5 mr-0 ml-0 mb-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body shadow">
            <h1 class="text-center mb-3">
                ACCOUNT SETTINGS
            </h1>

            <!-- Profile Picture -->
            <div class="d-flex align-items-center mt-3 mb-3">
                <img src="<%= user.img.url != '' ? user.img.url : '/img/default_profile_image.png' %>" class="rounded-circle mx-auto d-block" alt="Profile Image" style="height: 120px; width: 120px; border: 3px solid rgb(214, 210, 210);">
            </div>

            <%- include('./partials/messages/messages'); %>

            <div class="d-flex justify-content-center mb-4">
                <form  action="/user/upload-profile-image" method="POST" enctype="multipart/form-data">
                   
                    <!--input -->
                    <input type="file" class="border mt-2 mb-1" id="profileImage" name="profileImage">

                    <p class="text-center mt-0">Select file (jpeg, jpg, png) < 2MB </p>
                    <div class="d-flex justify-content-center">
                        <button class="btn btn-primary btn-mdtext-center" onclick="startLoading()" type="submit">Upload & Change</button>
                    </div>
                </form>
            </div>
            <!-- / End Profile Picture -->

            <hr>

            <!-- Account Info -->
            <div class="mb-4">
                <h3 class="text-center">Account Info</h3>
                <!-- error message -->
                <% if(error_msg2!='' ){ %>
                    <div class="alert alert-dismissible alert-danger focus-this-element" tabindex="-1" style="outline: none;">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <%= error_msg2 %>
                    </div>
                <% } %>
                <!-- success message -->
                <% if(success_msg2!='' ){ %>
                    <div class="alert alert-dismissible alert-success focus-this-element" tabindex="-1" style="outline: none;">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <%= success_msg2 %>
                    </div>
                <% } %>
                <form action="/user/update-account-info" method="POST">
                    <label>Name</label>
                    <div class="form-group d-flex">
                        <input type="name" id="name" name="name" class="form-control" placeholder="Name" value="<%= typeof name != 'undefined' ? name : user.name %>" style="border-radius: 4px 0px 0px 4px;">
                        <button type="submit" class="btn btn-primary justify-content-end" style="border-radius: 0px 4px 4px 0px;" onclick="startLoading()">
                            change
                        </button>
                    </div>
                </form>

                <form action="/user/update-account-info" method="POST">
                    <label>Username</label>
                    <div class="form-group d-flex">
                        <input type="username" id="username" name="username" class="form-control" placeholder="username"
                            value="<%= typeof username != 'undefined' ? username : user.username %>" style="border-radius: 4px 0px 0px 4px;">
                        <button type="submit" class="btn btn-primary justify-content-end" style="border-radius: 0px 4px 4px 0px;" onclick="startLoading()">
                            change
                        </button>
                    </div>
                </form>
        
                <form action="/user/update-account-info" method="POST">
                    <label>Email</label>
                    <div class="form-group d-flex">
                        <input type="email" id="email" name="email" class="form-control" placeholder="Email" value="<%= typeof email != 'undefined' ? email : user.email %>" style="border-radius: 4px 0px 0px 4px;">
                        <button type="submit" class="btn btn-primary justify-content-end" style="border-radius: 0px 4px 4px 0px;" onclick="startLoading()">
                            change
                        </button>
                    </div>
                </form>

            </div>
            <!-- /End Account Info -->

            <hr>

            <!-- Password -->
            <div class="mb-3">
                <h3 class="text-center">Password</h3>
                <form action="/user/change-account-password" method="POST">
                    <!-- error message -->
                    <% if(error_msg3!='' ){ %>
                        <div class="alert alert-dismissible alert-danger focus-this-element" tabindex="-1" style="outline: none;">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            <%= error_msg3 %>
                        </div>
                    <% } %>
                    <!-- success message -->
                    <% if(success_msg3!='' ){ %>
                        <div class="alert alert-dismissible alert-success focus-this-element" tabindex="-1" style="outline: none;">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            <%= success_msg3 %>
                        </div>
                    <% } %>

                    <div class="form-group">
                        <label for="password">New Password</label>
                        <input type="password" id="password" name="password" class="form-control"
                            placeholder="New Password" value="<%= typeof password != 'undefined' ? password : '' %>" />
                    </div>
                    <div class="form-group">
                        <label for="confirmpassword">Confirm Password</label>
                        <input type="password" id="confirmpassword" name="confirmpassword" class="form-control"
                            placeholder="Confirm Password"
                            value="<%= typeof confirmpassword != 'undefined' ? confirmpassword : '' %>" />
                    </div>

                    <button type="submit" class="btn btn-primary float-right" onclick="startLoading()">
                        Change Password
                    </button>
                </form>
            </div>
            <!-- / End Password -->

        </div>
    </div>
</div>

<br><br>